@model GeekHunters.GRS.Web.ViewModels.Home.CandidateListModel

<!-- Table -->
<table class="table">
    <thead class="thead-default">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Skills</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var candidate in Model.CandidateCollection)
        {
            <tr>
                <td>@candidate.FirstName</td>
                <td>@candidate.LastName</td>
                <td>@string.Join(",",candidate.SkillCollection.Select(e => e.Name).ToList())</td>
            </tr>
        }
    </tbody>
</table>

